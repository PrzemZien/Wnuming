% to jest dla interacji w tym przypadku 100
%Metoda Newtona 
clear a; clear b
dwx = @(x) 0.04*x.^3 - 0.12*x.^2 + 0.04*x.^1 + 0.04 
a = -2;
b = 4;
x = a
real_x = -1; % wiem Å¼e w tym miejscu jest miejsce zerowe 
max_iter = 100; 

for i=1:max_iter
    x_new = x - wx(x)/dwx(x)
    x = x_new;
    deltax2(i) = abs(real_x - x)
end

semilogy(deltax2, 1:max_iter,'r')
hold on;
